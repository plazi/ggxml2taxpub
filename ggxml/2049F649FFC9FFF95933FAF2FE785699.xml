<paragraph id="A85F475FFFC9FFF85BBEF91BFEFF5715" blockId="10.[189,1398,1762,1823]" pageId="10" pageNumber="44">
<taxonomicName id="6FE03CDCFFC9FFF85BBEF91BFDF656F6" box="[189,547,1762,1788]" class="Insecta" family="Curculionidae" genus="Afrosmicronyx" higherTaxonomySource="GBIF" kingdom="Animalia" order="Coleoptera" pageId="10" pageNumber="44" phylum="Arthropoda" rank="species" species="nebulosipennis" status="sp. nov.">
