</taxonomicName>
, 
<taxonomicName id="4C224D780507FF8DFC93F88C9FC64405" authorityName="Perty" authorityYear="1833" box="[796,927,1849,1874]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="11" pageNumber="47" phylum="Arthropoda" rank="species" species="armatus">
