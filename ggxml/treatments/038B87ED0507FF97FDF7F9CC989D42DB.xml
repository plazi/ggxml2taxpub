<taxonomicName id="4C224D780507FF8DFD06F88C9F554405" baseAuthorityName="Mello-Leitao" baseAuthorityYear="1942" box="[649,780,1848,1874]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="11" pageNumber="47" phylum="Arthropoda" rank="species" species="aduncus">
