</taxonomicName>
, 
<taxonomicName id="4C224D780507FF8DFC3FF88C98044405" box="[944,1117,1848,1874]" class="Arachnida" family="Gonyleptidae" genus="Eusarcus" higherTaxonomySource="GBIF" kingdom="Animalia" order="Opiliones" pageId="11" pageNumber="47" phylum="Arthropoda" rank="species" species="cavernicola">
